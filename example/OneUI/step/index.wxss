/* step */

/* 主题一 */

.__one-step-theme1 {
  display: flex;
  padding: 0 40rpx 30px;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.__one-step-theme1-circle-icon {
  position: relative;
}

.__one-step-theme1-circle {
  position: relative;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  background-color: #ccc;
  line-height: 16px;
  text-align: center;
  font-size: 12px;
  color: #fff;
}

.__one-step-theme1-text {
  font-size: 14px;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 120%);
  white-space: nowrap;
  line-height: 1.4em;
  color: #333;
}

.__one-step-theme1-text.__one-step-theme1-text-ok {
  color: #04be02;
}

.__one-step-theme1-line {
  height: 2px;
  background-color: #ccc;
  margin: 0 20rpx;
  width: 120rpx;
  position: relative;
}

.__one-step-theme1-line-ok {
  position: absolute;
  top: 0;
  left: 0;
  height: 2px;
  width: 0;
  background-color: #04be02;
  transition: width 0.8s ease-out;
}

.__one-step-theme1-line-ok.active {
  width: 100%;
}

/* 主题二 */

.__one-step-theme2 {
  display: flex;
  padding: 35px 40rpx 5px;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.__one-step-theme2-circle {
  background-color: #ccc;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  position: relative;
}

.__one-step-theme2-circle.active {
  background-color: #04be02;
}

.__one-step-theme2-text {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, -70%);
  white-space: nowrap;
  font-size: 14px;
  line-height: 1.4em;
  padding: 2px 12rpx 5px;
  color: #999;
  border-radius: 50px;
  transition: background 0.8s;
}

.__one-step-theme2-text.active {
  background-color: #04be02;
  color: #fff;
}

.__one-step-theme2-arrow {
  content: '';
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 6px;
  border-color: transparent;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 90%);
  transition: border-color 0.8s;
}

.__one-step-theme2-line {
  height: 2px;
  background-color: #ccc;
  margin: 0 20rpx;
  width: 120rpx;
  position: relative;
}

.__one-step-theme2-line-ok {
  position: absolute;
  top: 0;
  left: 0;
  height: 2px;
  width: 0;
  background-color: #04be02;
  transition: width 0.5s ease-out;
}

.__one-step-theme2-line-ok.active {
  width: 100%;
}

.__one-step-theme2-aside {
  padding: 5px 40rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 14px;
  color: #333;
}

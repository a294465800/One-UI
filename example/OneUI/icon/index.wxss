/* 图标样式 */

@font-face {
  font-family: 'one-icon'; 
  src: url('//at.alicdn.com/t/font_480478_j9x66bvnsq2p4x6r.eot');
  src: url('//at.alicdn.com/t/font_480478_j9x66bvnsq2p4x6r.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_480478_j9x66bvnsq2p4x6r.woff') format('woff'),
         url('//at.alicdn.com/t/font_480478_j9x66bvnsq2p4x6r.ttf') format('truetype'),
         url('//at.alicdn.com/t/font_480478_j9x66bvnsq2p4x6r.svg#iconfont') format('svg');
}

.one-icon {
  display: inline-block;
}

.one-icon::before {
  font-family: "one-icon" !important;
  font-size: 18px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
}

@keyframes rotating {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

.one-icon-loading-dot::before {
  content: '\e600';
  animation: rotating 1.2s linear infinite;
}

.one-icon-loading-bold-dot::before {
  content: '\e63d';
  animation: rotating 1.2s linear infinite;
}

.one-icon-loading-circle::before {
  content: '\eb0e';
  animation: rotating 1.2s linear infinite;
}

.one-icon-arrow::before {
  content: '\e601';
}

.one-icon-arrow-rotate::before {
  content: '\e601';
  transform: rotate(-90deg);
}

.one-icon-arrow-thin::before {
  content: '\e602';
}
            </view>
            <view class='__one-list-item-subtitle'>{{listItem.subTitle}}</view>
          </view>
        </view>
      </view>
    </view>
    <!--/主题二  -->

    <!--主题三  -->
    <view class='__one-item-theme-three' hidden='{{!(currentIndex == 2)}}'>
      <view class='__one-list-item' wx:for="{{list1}}" wx:for-item="listItem" wx:key="id">
        <image class='__one-list-item-img' mode='aspectFit' src='{{listItem.img}}'></image>

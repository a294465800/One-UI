/* pages/form/form.wxss */
@import '/OneUI/icon/index.wxss';
@import '/OneUI/button/index.wxss';

.container {
  padding: 0;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.one-title {
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 30rpx;
  color: #999;
}

.one-icon-arrow-rotate {
  color: #ccc;
  font-size: 10px;
}

.margin {
  margin: 20rpx;
}

.one-title {
  margin-top: 20px;
}

/* input 样式 */

.one-form-group {
  padding: 0 30rpx;
  font-size: 16px;
  background-color: #fff;
}

.one-form-tips {
  font-size: 14px;
  padding: 0 30rpx;
  margin-top: 0.3em;
  color: #999;
}

.one-label-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  position: relative;
  box-sizing: border-box;
  height: 45px;
}

.one-label-control::after {
  content: '';
  width: 100%;
  height: 1px;
  position: absolute;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #e5e5e5;
  transform: scaleY(0.5);
  z-index: 2;
}

.one-label-control:last-child::after {
  border-bottom: 0;
}

.one-input-control {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 15px;
}

/* 100% input */

.one-form-full {
  margin-right: 20rpx;
  font-size: 15px;
}

.one-form-full {
  padding: 0;
  width: 100%;
}

.one-form-full .one-label-control {
  padding: 20rpx 30rpx;
}

/* 内嵌按钮 */

.one-label-control.one-btn-group {
  padding-top: 0;
  padding-bottom: 0;
  padding-right: 0;
}

.one-btn-control {
  position: relative;
  height: 45px;
  line-height: 45px;
  font-size: 14px;
  text-align: center;
  border-radius: 0;
  border-left: 1px solid transparent;
}

.one-btn-control::after {
  display: none;
}

/* 文本域 */

.one-label-control.one-textarea {
  height: auto;
}

.one-textarea>view {
  align-self: flex-start;
}

.one-textarea-control {
  padding: 0 20rpx 20rpx 20rpx;
  flex: 1;
  position: relative;
}

.one-textarea-control textarea {
  box-sizing: border-box;
  height: 80px;
  width: 100%;
  font-size: 15px;
}

.one-textarea-left {
  width: 100%;
  text-align: right;
  font-size: 14px;
  color: #999;
  font-weight: 600px;
}

/* 其他样式 */

.one-label-control.error {
  color: #ef4f4f !important;
  background-color: #fff !important;
}

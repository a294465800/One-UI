<!--pages/form/form.wxml-->
<view class='container'>
  <view class='one-title'>基础样式</view>

  <view class='one-form-group'>
    <label class='one-label-control'>
      <view>姓名：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
    </label>
    <label class='one-label-control'>
      <view>年龄：</view>
      <input class='one-input-control' type='number' placeholder='请输入年龄'></input>
      <view class='one-icon one-icon-arrow-thin'></view>
    </label>
    <label class='one-label-control'>
      <view>地址：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
    </label>
    <label class='one-label-control'>
      <view>开关</view>
      <switch/>
    </label>
  </view>
  <view class='margin'></view>
  <view class='one-form-group one-form-full'>
    <label class='one-label-control'>
      <view>姓名：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
    </label>
    <label class='one-label-control'>
      <view>年龄：</view>
      <input class='one-input-control' type='number' placeholder='请输入年龄'></input>
      <view class='one-icon one-icon-arrow-thin'></view>
    </label>
    <label class='one-label-control one-btn-group'>
      <view>地址：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
      <button class='one-btn-control primary'>inside btn</button>
    </label>
    <label class='one-label-control'>
      <view>开关</view>
      <switch checked/>
    </label>
  </view>
  <view class='one-form-tips'>底部文字说明</view>
  <view class='one-title'>表单报错</view>
  <view class='one-form-group'>
    <label class='one-label-control error'>
      <view>姓名：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
    </label>
  </view>
  <view class='one-title'>使用 one-btn </view>
  <view class='one-form-group one-form-full'>
    <label class='one-label-control'>
      <view>姓名：</view>
      <input class='one-input-control' placeholder='请输入姓名'></input>
      <button class='one-btn mini primary'>one-btn</button>
    </label>
  </view>
  <view class='one-title'>文本域</view>
  <view class='one-form-group one-form-full'>
    <label class='one-label-control one-textarea'>
      <view>评论：</view>
      <view class='one-textarea-control'>
        <textarea placeholder='这里输入文字'></textarea>
      </view>
    </label>
    <label class='one-label-control one-textarea'>
      <view>评论：</view>
      <view class='one-textarea-control'>
        <textarea placeholder='这里输入文字' bindinput='getLength' maxlength='200'></textarea>
        <view class='one-textarea-left'>{{left}}/200</view>
      </view>
    </label>
  </view>
</view>